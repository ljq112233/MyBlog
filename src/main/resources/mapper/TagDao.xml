<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.TagDao">

    <!--结果集映射-->
    <resultMap id="tags" type="Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <select id="getTag" resultType="Tag">
        select id,name from blog_lujianqiang.t_tag where id = #{id}
    </select>

    <insert id="saveTag" parameterType="Tag">
        insert into blog_lujianqiang.t_tag value (#{id},#{name})
    </insert>

    <select id="getAllTag" resultType="Tag">
        select * from blog_lujianqiang.t_tag
    </select>

    <select id="getBlogTag" resultMap="tags">
        select  t.id tid, t.name, b.id bid, b.title
        from blog_lujianqiang.t_tag as t,blog_lujianqiang.t_blog as b,blog_lujianqiang.t_blog_tags as bt
        where t.id = bt.tag_id and b.id = bt.blog_id
    </select>

    <select id="getTagByName" resultType="Tag">
        select *
        from blog_lujianqiang.t_tag where name = #{name};
    </select>

    <delete id="deleteTag">
        delete from blog_lujianqiang.t_tag where id = #{id}
    </delete>

    <update id="updateTag" parameterType="Tag">
        update blog_lujianqiang.t_tag set name = #{name} where id = #{id}
    </update>

</mapper>